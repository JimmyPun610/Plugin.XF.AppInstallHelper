<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.Maui.MainPage">



    <StackLayout>
        <!-- Place new controls here -->
        <Label x:Name="CurrentVersionCodeLabel"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Label x:Name="CurrentVersionNameLabel"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Button x:Name="AskForPermissionBtn" Text="Ask for permission (Android needed)" Clicked="AskForPermissionBtn_Clicked"/>
        <Button x:Name="ForceUpdateBtn" Text="Check new version (ForceUpdate)" Clicked="ForceUpdateBtn_Clicked"/>
        <Button x:Name="NonForceUpdateBtn" Text="Check new version (Can skip)" Clicked="NonForceUpdateBtn_Clicked"/>
    </StackLayout>

</ContentPage>
